+"""Unit tests for BGP message handling."""
+from __future__ import annotations
+
+import pytest
+from exabgp.bgp.message.message import Message
+from exabgp.bgp.message.keepalive import KeepAlive
+
+
+class TestBGPMessage:
+    """Unit tests for BGP message base class."""
+    
+    def test_message_creation(self):
+        """Test basic message creation."""
+        msg = Message(msgid=4)  # KEEPALIVE
+        assert msg.ID == 4
+        
+    def test_message_packing(self):
+        """Test message packing to wire format."""
+        msg = Message(msgid=4)
+        packed = msg.pack()
+        
+        # BGP header is 19 bytes: 16-byte marker + 2-byte length + 1-byte type
+        assert len(packed) == 19
+        assert packed.startswith(b'\xff' * 16)  # BGP marker
+        assert packed[18:19] == b'\x04'  # Message type (KEEPALIVE)
+        
+    def test_message_unpacking(self, sample_bgp_message: bytes):
+        """Test message unpacking from wire format."""
+        msg = Message.unpack(sample_bgp_message)
+        assert msg is not None
+        
+    def test_invalid_message_unpacking(self):
+        """Test unpacking of invalid messages."""
+        # Too short message
+        invalid_msg = b'\xff' * 10
+        result = Message.unpack(invalid_msg)
+        assert result is None
+        
+        # Invalid marker
+        invalid_marker = b'\x00' * 16 + b'\x00\x13\x04'
+        result = Message.unpack(invalid_marker)
+        assert result is None


+class TestKeepAlive:
+    """Unit tests for BGP KEEPALIVE messages."""
+    
+    def test_keepalive_creation(self):
+        """Test KEEPALIVE message creation."""
+        ka = KeepAlive()
+        assert ka.ID == 4  # KEEPALIVE message type
+        
+    def test_keepalive_packing(self):
+        """Test KEEPALIVE message packing."""
+        ka = KeepAlive()
+        packed = ka.pack()
+        
+        # KEEPALIVE should be exactly 19 bytes (header only)
+        assert len(packed) == 19
+        assert packed.startswith(b'\xff' * 16)
+        assert packed[16:18] == b'\x00\x13'  # Length = 19
+        assert packed[18:19] == b'\x04'      # Type = KEEPALIVE
+        
+    def test_keepalive_string_representation(self):
+        """Test KEEPALIVE string representation."""
+        ka = KeepAlive()
+        str_repr = str(ka)
+        assert 'keepalive' in str_repr.lower()
