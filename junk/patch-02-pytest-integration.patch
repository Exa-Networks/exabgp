+# ExaBGP Development Makefile
+
+.PHONY: test test-unit test-integration test-functional test-all
+.PHONY: lint type-check format clean install-dev
+
+# Test targets
+test-unit:
+	pytest tests/unit/ -v
+
+test-integration:
+	pytest tests/test_integration.py -v -m "not slow"
+
+test-functional:
+	python qa/bin/functional parsing
+	python qa/bin/functional decoding
+	python qa/bin/functional encoding
+
+test-all: test-unit test-integration test-functional
+
+# Development targets  
+install-dev:
+	pip install -e ".[dev]"
+	pip install pytest pytest-cov mypy black isort
+
+lint:
+	isort --check-only src/ tests/
+	black --check src/ tests/
+
+format:
+	isort src/ tests/
+	black src/ tests/
+
+type-check:
+	mypy src/exabgp/
+
+clean:
+	find . -type d -name __pycache__ -delete
+	find . -name "*.pyc" -delete
+	rm -rf .pytest_cache/
+	rm -rf .mypy_cache/