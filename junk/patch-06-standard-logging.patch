+"""Standard logging infrastructure for ExaBGP.
+
+This module provides centralized logging configuration that replaces the
+custom logging system with Python's standard logging module. It includes
+structured JSON logging for production use and human-readable console
+logging for development.
+
+Key features:
+- Structured JSON logging with BGP-specific context
+- Configurable log levels and formats
+- Automatic log rotation
+- Support for both console and file output
+- BGP session tracking and correlation
+"""
+
+import logging
+import logging.config
+import logging.handlers
+from typing import Dict, Any, Optional
+import json
+import sys
+from pathlib import Path
+import os
+
+
+class BGPJSONFormatter(logging.Formatter):
+    """JSON formatter for structured BGP logging.
+    
+    Formats log records as JSON with BGP-specific context fields.
+    This enables easy parsing and analysis of logs in production systems.
+    """
+    
+    def format(self, record: logging.LogRecord) -> str:
+        """Format log record as JSON.
+        
+        Args:
+            record: Log record to format
+            
+        Returns:
+            JSON-formatted log string
+        """
+        log_data = {
+            'timestamp': self.formatTime(record, self.datefmt),
+            'level': record.levelname,
+            'logger': record.name,
+            'message': record.getMessage(),
+            'module': record.module,
+            'function': record.funcName,
+            'line': record.lineno,
+            'process': record.process,
+            'thread': record.thread,
+        }
+        
+        # Add exception information if present
+        if record.exc_info:
+            log_data['exception'] = self.formatException(record.exc_info)
+        
+        # Add BGP-specific context if available
+        if hasattr(record, 'neighbor'):
+            log_data['neighbor'] = record.neighbor
+        if hasattr(record, 'session_id'):
+            log_data['session_id'] = record.session_id
+        if hasattr(record, 'message_type'):
+            log_data['bgp_message_type'] = record.message_type
+        if hasattr(record, 'peer_as'):
+            log_data['peer_as'] = record.peer_as
+        if hasattr(record, 'local_as'):
+            log_data['local_as'] = record.local_as
+        if hasattr(record, 'route_prefix'):
+            log_data['route_prefix'] = record.route_prefix
+            
+        return json.dumps(log_data, default=str)
+
+
+class BGPContextFilter(logging.Filter):
+    """Filter to add BGP context to log records.
+    
+    Automatically adds BGP-specific context information to log records
+    when available in thread-local storage or record attributes.
+    """
+    
+    def filter(self, record: logging.LogRecord) -> bool:
+        """Add BGP context to record if available.
+        
+        Args:
+            record: Log record to enhance
+            
+        Returns:
+            True (always pass the record)
+        """
+        # Add default BGP context fields if not present
+        if not hasattr(record, 'neighbor'):
+            record.neighbor = getattr(record, 'neighbor', None)
+        if not hasattr(record, 'session_id'):
+            record.session_id = getattr(record, 'session_id', None)
+            
+        return True
+
+
+def setup_logging(config_path: Optional[Path] = None, 
+                  log_level: str = "INFO",
+                  enable_console: bool = True,
+                  enable_file: bool = True,
+                  log_file: str = "exabgp.log") -> None:
+    """Setup centralized logging configuration.
+    
+    Args:
+        config_path: Path to logging configuration file (JSON)
+        log_level: Default log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
+        enable_console: Enable console logging
+        enable_file: Enable file logging
+        log_file: Log file path
+    """
+    
+    # Default logging configuration
+    config = {
+        'version': 1,
+        'disable_existing_loggers': False,
+        'formatters': {
+            'json': {
+                '()': 'exabgp.logging.BGPJSONFormatter',
+            },
+            'console': {
+                'format': '%(asctime)s - %(name)s - %(levelname)s - %(message)s',
+                'datefmt': '%Y-%m-%d %H:%M:%S'
+            },
+            'detailed': {
+                'format': '%(asctime)s - %(name)s - %(levelname)s - %(module)s:%(funcName)s:%(lineno)d - %(message)s',
+                'datefmt': '%Y-%m-%d %H:%M:%S'
+            }
+        },
+        'filters': {
+            'bgp_context': {
+                '()': 'exabgp.logging.BGPContextFilter',
+            }
+        },
+        'handlers': {},
+        'loggers': {
+            'exabgp': {
+                'handlers': [],
+                'level': log_level,
+                'propagate': False,
+            }
+        },
+        'root': {
+            'level': 'WARNING',
+            'handlers': [],
+        }
+    }
+    
+    # Add console handler if enabled
+    if enable_console:
+        config['handlers']['console'] = {
+            'class': 'logging.StreamHandler',
+            'formatter': 'console',
+            'level': log_level,
+            'stream': 'ext://sys.stdout',
+            'filters': ['bgp_context'],
+        }
+        config['loggers']['exabgp']['handlers'].append('console')
+        config['root']['handlers'].append('console')
+    
+    # Add file handler if enabled
+    if enable_file:
+        config['handlers']['file'] = {
+            'class': 'logging.handlers.RotatingFileHandler',
+            'filename': log_file,
+            'formatter': 'json',
+            'maxBytes': 10485760,  # 10MB
+            'backupCount': 5,
+            'level': 'DEBUG',
+            'filters': ['bgp_context'],
+        }
+        config['loggers']['exabgp']['handlers'].append('file')
+    
+    # Load custom configuration if provided
+    if config_path and config_path.exists():
+        try:
+            with open(config_path) as f:
+                custom_config = json.load(f)
+                # Merge custom config with defaults
+                config.update(custom_config)
+        except Exception as e:
+            print(f"Warning: Failed to load logging config from {config_path}: {e}", 
+                  file=sys.stderr)
+    
+    # Apply configuration
+    logging.config.dictConfig(config)
+
+
+def get_logger(name: str) -> logging.Logger:
+    """Get a logger with BGP-specific configuration.
+    
+    Args:
+        name: Logger name (usually __name__)
+        
+    Returns:
+        Configured logger instance
+    """
+    return logging.getLogger(f"exabgp.{name}")
+
+
+def log_bgp_message(logger: logging.Logger, 
+                   level: int,
+                   message: str,
+                   neighbor: Optional[str] = None,
+                   session_id: Optional[str] = None,
+                   message_type: Optional[int] = None,
+                   **kwargs) -> None:
+    """Log a BGP-related message with context.
+    
+    Args:
+        logger: Logger instance
+        level: Log level (logging.DEBUG, INFO, etc.)
+        message: Log message
+        neighbor: BGP neighbor address
+        session_id: BGP session identifier
+        message_type: BGP message type (1-4)
+        **kwargs: Additional context fields
+    """
+    extra = {
+        'neighbor': neighbor,
+        'session_id': session_id,
+        'message_type': message_type,
+    }
+    extra.update(kwargs)
+    
+    logger.log(level, message, extra=extra)
+
+
 # Legacy compatibility - preserve existing logger interface
 from exabgp.logger.handler import Logger as LegacyLogger
+
+# Initialize default logging
+if not logging.getLogger('exabgp').handlers:
+    setup_logging()
