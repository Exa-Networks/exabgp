#!/usr/bin/env python3

import time

from exabgp_api import send, wait_for_ack, wait_for_shutdown


def main() -> None:
    messages = [
        'announce route 2.2.2.2/32 next-hop 22.22.22.22',
        'announce route 3.3.3.3/32 next-hop 33.33.33.33',
    ]

    time.sleep(0.2)

    for message in messages:
        send(message)
        time.sleep(0.2)

    wait_for_ack(expected_count=2)
    wait_for_shutdown()


if __name__ == '__main__':
    main()
