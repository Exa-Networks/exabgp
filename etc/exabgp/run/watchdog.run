#!/usr/bin/env python3

import os
import sys
import time

time.sleep(1)  # time for configuration routes to pass

while os.getppid() != 1:
    sys.stdout.write("announce watchdog dnsr\n")
    sys.stdout.flush()
    time.sleep(1)

    sys.stdout.write("withdraw watchdog dnsr\n")
    sys.stdout.flush()
    time.sleep(1)
