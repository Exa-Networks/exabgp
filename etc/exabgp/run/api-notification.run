#!/usr/bin/env python3

import time

from exabgp_api import send, wait_for_shutdown


def main() -> None:
    try:
        time.sleep(0.2)
        # this will never be received by the peer
        send('announce route 1.2.3.4 next-hop 5.6.7.8')
        wait_for_shutdown()
        # This route will never be sent
    except IOError:
        pass


if __name__ == '__main__':
    main()
