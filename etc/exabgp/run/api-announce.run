#!/usr/bin/env python3

from exabgp_api import send, wait_for_ack, wait_for_shutdown


def main() -> None:
    messages = [
        'announce route 1.1.0.0/24 next-hop 101.1.101.1',
        'announce route 1.2.0.0/25 next-hop 101.1.101.1',
    ]

    for message in messages:
        send(message)

    # Wait for ACKs (may be disabled in config)
    wait_for_ack(expected_count=2)

    # Wait for shutdown signal
    wait_for_shutdown()


if __name__ == '__main__':
    main()
