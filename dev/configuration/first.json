				"simple-attributes": {
					"10.0.0.0/16": {
						"_": "those three can be defined everywhere too, but require the right capability",
						"label": [0, 1],
						"path-information": 0,
						"route-distinguisher": "1:0.0.0.0",
						"split": 24
					}
				}
			}
		},
		"flow": {
			"off-goes-the-ddos": {
				"simple-ddos": "make-it-slow",
				"port-block": "drop-it"
			},
			"saved_just_in_case": {
				"complex-attack": "send-it-elsewhere"
			}
