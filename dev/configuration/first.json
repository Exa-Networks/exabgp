			"tcp": {
				"bind": "82.219.212.34",
				"connect": "195.8.215.15",
				"ttl-security": false,
				"md5": "secret"
			},
			"api": {
				"syslog-text": [ "receive-routes" ],
				"syslog-json": [ "neighbor-changes","send-packets","receive-packets","receive-routes" ]
			},
			"session": {
				"router-id": "82.219.212.34",
				"hold-time": 180,
				"asn": {
					"local": 65500,
					"peer": 65500
				},
				"capability": {
					"family": {
						"inet4": ["unicast","multicast","nlri-mpls","mpls-vpn","flow-vpn","flow"],
						"inet6": ["unicast"],
						"_inet": ["unicast","flow"],
